{
  "name": "eventualize",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "src/index.ts",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test": "DOTENV_CONFIG_PATH=.env.test dotenv -e .env.test -- node --import tsx --test packages/**/src/**/*.test.ts apps/**/src/**/*.test.ts",
    "test:unit": "DOTENV_CONFIG_PATH=.env.test dotenv -e .env.test -- node --import tsx --test apps/**/src/tests/unit.test.ts",
    "test:integration": "DOTENV_CONFIG_PATH=.env.test dotenv -e .env.test -- node --import tsx --test apps/**/src/tests/integration.test.ts",
    "start-local-dbs": "docker compose up -d && bash ./scripts/wait-for-dbs.sh",
    "stop-local-dbs": "docker compose down --volumes",
    "test:integration:local": "npm run start-local-dbs && npm run test:integration && npm run stop-local-dbs",
    "build": "tsc --build",
    "clean": "rimraf tsconfig.tsbuildinfo",
    "clear": " npm run clean && npm run clean --workspaces --if-present",
    "cleanbuild": "tsc --build --clean && tsc --build",
    "rebuild": "npm run clear && npm run cleanbuild"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.10.1",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}