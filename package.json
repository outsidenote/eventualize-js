{
  "name": "eventualize",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "src/index.ts",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "test": "dotenv -e .env.test -- node --import tsx --test packages/core/src/EvDbStream.test.ts apps/sample-app/src/tests/unit.test.ts apps/sample-app/src/tests/integration.test.ts",
    "test:mysql": "TEST_DATABASES=MySQL dotenv -e .env.test -- node --import tsx --test packages/core/src/EvDbStream.test.ts apps/sample-app/src/tests/integration.test.ts",
    "test:postgres": "TEST_DATABASES=Postgres dotenv -e .env.test -- node --import tsx --test packages/core/src/EvDbStream.test.ts apps/sample-app/src/tests/integration.test.ts",
    "test:dynamodb": "TEST_DATABASES=DynamoDB dotenv -e .env.test -- node --import tsx --test packages/core/src/EvDbStream.test.ts apps/sample-app/src/tests/integration.test.ts",
    "test:unit": "dotenv -e .env.test -- node --import tsx --test packages/core/src/EvDbStream.test.ts apps/sample-app/src/tests/unit.test.ts",
    "test:integration": "dotenv -e .env.test -- node --import tsx --test apps/sample-app/src/tests/integration.test.ts",
    "stop-local-dbs": "docker compose down --volumes",
    "test:integration:local": "npm run start-local-dbs && npm run test:integration && npm run stop-local-dbs",
    "build": "tsc --build",
    "clean": "rimraf tsconfig.tsbuildinfo",
    "clear": " npm run clean && npm run clean --workspaces --if-present",
    "cleanbuild": "tsc --build --clean && tsc --build",
    "rebuild": "npm run clear && npm run cleanbuild",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.1",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}