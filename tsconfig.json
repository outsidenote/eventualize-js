{
  "compilerOptions": {
    "target": "ES2020", // The language features you want to use
    "module": "NodeNext", // Output code appropriate for modern Node.js
    "moduleResolution": "NodeNext", // Use Node.js specific resolution logic
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@eventualize/types": [
        "packages/types/src"
      ],
      "@eventualize/types/*": [
        "packages/types/src/*"
      ],
      "@eventualize/core": [
        "@eventualize/core"
      ],
      "@eventualize/core/*": [
        "@eventualize/core/*"
      ],
      "@eventualize/relational-storage-adapter": [
        "packages/adapters/relational-storage-adapter/src"
      ],
      "@eventualize/relational-storage-adapter/*": [
        "packages/adapters/relational-storage-adapter/src/*"
      ],
      "@eventualize/postgres-storage-adapter": [
        "packages/adapters/postgres-storage-adapter/src"
      ],
      "@eventualize/postgres-storage-adapter/*": [
        "packages/adapters/postgres-storage-adapter/src/*"
      ],
      "@eventualize/mysql-storage-adapter": [
        "packages/adapters/mysql-storage-adapter/src"
      ],
      "@eventualize/mysql-storage-adapter/*": [
        "packages/adapters/mysql-storage-adapter/src/*"
      ],
    }
  },
  "references": [
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/core"
    },
    {
      "path": "./packages/adapters/relational-storage-adapter"
    },
    {
      "path": "./packages/adapters/postgres-storage-adapter"
    },
    {
      "path": "./packages/adapters/mysql-storage-adapter"
    },
    {
      "path": "./packages/adapters/dynamodb-storage-adapter"
    },
    {
      "path": "./apps/sample-app"
    },
  ]
}